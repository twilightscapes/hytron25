---
import ContentBlock from './ContentBlock.astro';

interface Props {
  pitch?: {
    slug: string;
    // Keep the old interface for backwards compatibility but route to ContentBlock
  };
  sectionId?: string;
  sectionWidth?: 'narrow' | 'normal' | 'wide' | 'full';
}

const { pitch, sectionId, sectionWidth = 'normal' } = Astro.props;

// Use the slug from either the pitch object or sectionId
const contentSlug = pitch?.slug || sectionId;


if (!contentSlug) {
  console.error('‚ùå InfoBlock: No slug provided');
  return null;
}
---

<ContentBlock slug={contentSlug} sectionWidth={sectionWidth} />