<style>
  .features-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    color: #fff;
    background:#333;
    border-radius: 14px;
  }

  .hero-section {
    text-align: center;
    padding: 4rem 0;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    border-radius: 20px;
    margin-bottom: 4rem;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 50%, rgba(239, 68, 68, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 70% 50%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: clamp(1.2rem, 4.5vw, 4rem);
    font-weight: 900;
    margin-bottom: 1rem;
    background: linear-gradient(45deg, #ef4444, #f97316, #eab308);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1rem;
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-tagline {
    font-size: 1.5rem;
    font-weight: 600;
    color: #60a5fa;
    margin-bottom: 3rem;
  }

  .section {
    margin: 4rem 0;
    padding: 3rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .section-subtitle {
    font-size: 1.3rem;
    font-weight: 600;
    color: #fbbf24;
    margin-bottom: 1.5rem;
  }

  .privacy-section {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.1) 0%, rgba(220, 38, 38, 0.05) 100%);
    border-color: rgba(239, 68, 68, 0.2);
  }

  .custom-portal-section {
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(124, 58, 237, 0.05) 100%);
    border-color: rgba(139, 92, 246, 0.2);
  }

  .sovereignty-section {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.05) 100%);
    border-color: rgba(16, 185, 129, 0.2);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .feature-card h3 {
    color: #60a5fa;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .evil-list {
    background: rgba(239, 68, 68, 0.1);
    padding: 1.5rem;
    border-radius: 12px;
    border-left: 4px solid #ef4444;
    margin: 1.5rem 0;
  }

  .evil-list h4 {
    color: #fca5a5;
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .comparison-section {
    margin: 4rem 0;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 0 .5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    background: transparent;
    margin: 2rem 0;
  }

  .comparison-table th,
  .comparison-table td {
    padding: 1rem;
    text-align: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .comparison-table th {
    background: rgba(255, 255, 255, 0.1);
    font-weight: 700;
    font-size: 1.1rem;
  }

  .comparison-table td:first-child {
    text-align: left;
    font-weight: 600;
  }

  .checkmark {
    color: #4ade80;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .crossmark {
    color: #f87171;
    font-size: 1.2rem;
    font-weight: bold;
  }

  .cta-section {
    text-align: center;
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(59, 130, 246, 0.1) 100%);
    border-radius: 20px;
    margin: 4rem 0;
    border: 2px solid rgba(139, 92, 246, 0.3);
  }

   .cta-section h2{text-align: center !important; justify-content: center;}

  .cta-button {
    display: inline-block;
    padding: .5rem;
    background: linear-gradient(45deg, #ef4444, #f97316);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-size: 1.3rem;
    font-weight: 700;
    transition: all 0.3s ease;
    margin: 1rem auto;
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(239, 68, 68, 0.4);
  }

  .resistance-quote {
    font-style: italic;
    font-size: 1.1rem;
    text-align: center;
    margin: 3rem 0;
    padding: 2rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 12px;
    border-left: 4px solid #fbbf24;
  }

  ul, ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }

  li {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  p {
    line-height: 1.7;
    margin: 1rem 0;
  }

  .big-brother-callout {
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(220, 38, 38, 0.1) 100%);
    border: 2px solid rgba(239, 68, 68, 0.3);
    border-radius: 12px;
    padding: 2rem;
    margin: 2rem 0;
    text-align: center;
  }

  .big-brother-callout h3 {
    color: #fca5a5;
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .features-container {
      padding: 1rem;
    }

    .hero-title {
          font-size: clamp(1rem, 1.5vw, 2rem);
    }

    .hero-subtitle {
      font-size: 1rem;
      padding: 0 1rem;
    }

    .section {
      padding: 2rem 1rem;
    }

    .section-title {
          font-size: clamp(1rem, 1.5vw, 2rem);
    }

    .comparison-table th,
    .comparison-table td {
      padding: 0.5rem;
      font-size: 0.9rem;
    }
  }
</style>

